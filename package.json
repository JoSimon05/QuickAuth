{
  "info": {
    "displayName": "QuickAuth",
    "displayVersion": "1.0.0",
    "displayAppID": "QuickAuth"
  },
  "name": "quick-auth",
  "version": "1.0.0",
  "description": "Get your OTPs!",
  "author": "Jo",
  "license": "UNLICENSED",
  "homepage": "https://github.com/JoSimon05/QuickAuth#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/JoSimon05/QuickAuth"
  },
  "publish": [
    "github"
  ],
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder build",
    "publish": "electron-builder -p always"
  },
  "dependencies": {
    "electron-updater": "^6.3.3",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^29.4.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "productName": "QuickAuth",
    "appId": "QuickAuth",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "release_${version}"
    },
    "files": [
      "!.database/**/*",
      "!.git/**/*",
      "!.github/**/*",
      "!.gitignore",
      "!README.md",
      "!TODO"
    ],
    "win": {
      "target": "nsis",
      "icon": "./icons/logo.ico",
      "asar": true
    },
    "nsis": {
      "artifactName": "${productName}_${version}_setup.exe",
      "installerIcon": "./icons/installer.ico",
      "installerHeaderIcon": "./icons/logo.ico",
      "uninstallDisplayName": "${productName}",
      "oneClick": true,
      "createDesktopShortcut": true,
      "shortcutName": "${productName}",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "include": "./installer.nsh"
    }
  }
}
